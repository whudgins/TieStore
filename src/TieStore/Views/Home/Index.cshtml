@using TieStore.Web.Models
@model Product[]
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home Page";
    string helloClass = null;
}

<h2>Spring 2015</h2>
@foreach(var p in @Model) {
	<div class="col-md-3 col-sm-4 col-xs-6" style="background-color: white; padding-bottom:2em;">
		<h3 title="@p.Name" class="@helloClass"><a href="/Product/Id/@p.Id">@p.Name</a></h3>
        @if (@p.OnSale) {
            <p><span style="text-decoration: line-through;">$@p.Price</span>&nbsp;<span style="color: red;">On Sale! $@p.SalePrice</span></p>
        }
        @if (!@p.OnSale) {
            <p>$@p.SalePrice</p>
        }
        <span>@p.Description</span>
       
	</div>
 }