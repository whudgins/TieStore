@using TieStore.Web.Models
@model Product[]
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home Page";
    string helloClass = null;
}
<div class="col-md-12 col-sm-12 col-xs-12" style="background-color: white; padding-bottom:2em; text-align: right;">
    Sort by: &nbsp; <a href="/Category/Id/@Model[0].CategoryId">Name</a> &mdash; <a href="/Category/PriceAsc/@Model[0].CategoryId">Price Low-High</a> &mdash; <b>Price High-Low</b>
</div>
@foreach (var x in @Model) {
	<div class="col-md-3 col-sm-4 col-xs-6" style="background-color: white; padding-bottom:2em;">
		<h3 title="@x.Name" class="@helloClass"><a href="/Product/Id/@x.Id">@x.Name</a></h3>
        @if (@x.OnSale) {
            <p><span style="text-decoration: line-through;">Price: $@x.Price</span>&nbsp;<span style="color: red;">Sale Price: $@x.SalePrice</span></p>
        }
        @if (!@x.OnSale) {
            <p>$@x.SalePrice</p>
        }
        <span>@x.Description</span>
       
	</div>
 }